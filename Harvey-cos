import streamlit as st

# Set up the page configuration
st.set_page_config(page_title="My Biography", page_icon="👋", layout="wide")

# Display your profile picture at the top
st.image("profile_picture.jpg", width=200, caption="This is me!", use_column_width=False)

# Title Section
st.title("Hi, I'm John Doe 👋")
st.subheader("Welcome to my personal biography! I'm a first-year Computer Engineering student.")

# Section 1: Personal Information
st.header("Personal Information")
st.write("""
    - **Height**: 5'10" (178 cm)
    - **Date of Birth**: January 1, 2005
    - **Location**: New York, USA
    - **Current Status**: First-year student in **Bachelor of Science in Computer Engineering**
""")

# Section 2: Education
st.header("Education")
